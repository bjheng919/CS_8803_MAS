<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_open_left_drawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tab_title"
            android:layout_alignParentStart="true"
            android:text="Filter" />
            <!--android:layout_marginStart="4dp"-->
            <!--android:layout_marginLeft="30dp"-->
            <!--android:layout_marginTop="4dp"-->

        <RelativeLayout
            android:id="@+id/tab_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/black_overlay">

            <!--<TextView-->
                <!--android:id="@+id/txt_top"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_marginBottom="0dp"-->
                <!--android:gravity="center"-->
                <!--android:text="Placeholder"-->
                <!--android:textColor="@color/textColorPrimary"-->
                <!--android:textSize="18sp" />-->

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

            </android.support.design.widget.AppBarLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/windowBackground"
                android:layout_alignParentBottom="true"/>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/tab_menu"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_deal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tab_menu_bg"
                android:drawableTop="@drawable/tab_menu_search"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="Discover"
                android:textColor="@drawable/tab_menu_search_text" />

            <TextView
                android:id="@+id/txt_poi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tab_menu_bg"
                android:drawableTop="@drawable/tab_menu_chat"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="Chat"
                android:textColor="@drawable/tab_menu_chat_text" />

            <TextView
                android:id="@+id/txt_user"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tab_menu_bg"
                android:drawableTop="@drawable/tab_menu_setting"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="Me"
                android:textColor="@drawable/tab_menu_setting_text" />


        </LinearLayout>

        <View
            android:id="@+id/div_tab_bar"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/black_overlay"
            android:layout_above="@id/tab_menu"/>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="573dp"
            android:layout_above="@id/tab_menu"
            android:layout_below="@+id/btn_open_left_drawer"
            android:layout_marginTop="-2dp"
            android:layout_marginBottom="7dp"
            android:background="@color/textColorPrimary">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:src="@drawable/plussign"
                app:useCompatPadding="true" />

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </FrameLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_left"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@color/textColorPrimary"

        >

        <TextView
            android:id="@+id/Sortby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Sort by"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Switch
            android:id="@+id/commitornot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Roommate Commited" />


        <RadioGroup
            android:id="@+id/sortbypriority"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/nationality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Nationality" />

            <RadioButton
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
                android:text="Gender" />

            <RadioButton
                android:id="@+id/lifestyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
                android:text="LifeStyle" />

            <RadioButton
                android:id="@+id/housing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
                android:text="Housing" />


        </RadioGroup>


    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>