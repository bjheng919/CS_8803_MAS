    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center"
        android:text="Match Your Roommates"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/textColorPrimary"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/surveydescription" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130dp">

        <Button
            android:id="@+id/tabone"
            android:layout_width="105dip"
            android:layout_height="200dip"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:background="@drawable/rounded_botton_one"
            android:text="01\nBasic Info"
            android:textColor="@color/textColor" />

        <Button
            android:id="@+id/tabtwo"
            android:layout_width="105dip"
            android:layout_height="200dip"
            android:layout_marginTop="-20dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:background="@drawable/rounded_botton_two"
            android:text="02\nRoom Choices"
            android:textColor="@color/textColor" />

        <Button
            android:id="@+id/tabthree"
            android:layout_width="105dip"
            android:layout_height="180dip"
            android:layout_marginTop="-20dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:background="@drawable/rounded_botton_three"
            android:text="03\nLifestyle"
            android:textColor="@color/textColor" />

    </RadioGroup>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        android:orientation="vertical"
        android:paddingLeft="130dp"
        android:paddingRight="20dp"
        android:paddingTop="120dp"
        tools:context="com.example.mit.placeholder.FillSurvey">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Your budget (per month)"
                android:textColor="@color/textColorPrimary"
                android:id="@+id/surveybudget" />

            <!--<SeekBar-->
            <!--android:id="@+id/budgetselect"-->
            <!--android:layout_width="300dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:enabled="true"-->
            <!--android:hidden="false"-->
            <!--android:length="70"-->
            <!--android:textMax="2100 $"-->
            <!--android:textMin="300 $"-->
            <!--android:toolTip="%v $"-->
            <!--android:valueMax="100"-->
            <!--android:valueMin="10"-->
            <!--android:valueNow="70" />-->

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:stretchColumns="0,1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/surveyRentLow"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="Lower bound $"
                        android:textColor="@color/textColorPrimary"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColorHint="#AAAAAA"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/surveyRentHigh"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="Upper bound $"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/textColorPrimary"
                        android:textColorHint="#AAAAAA"
                        android:textSize="18dp" />
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Preferred room type"
                android:textColor="@color/textColorPrimary"
                android:id="@+id/surveyroomtype" />

            <RadioGroup
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="vertical"
                android:id="@+id/sroomtype"
                >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="House"
                    android:textColor="@color/textColorPrimary"
                    android:checked="true"
                    android:id="@+id/survey1b1b" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="10dp"
                    android:text="Apartment"
                    android:textColor="@color/textColorPrimary"
                    android:id="@+id/survey2b1b" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="15dp"
                    android:text="Dorm"
                    android:textColor="@color/textColorPrimary"
                    android:id="@+id/survey2b2b" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="20dp"
                    android:text="I don't mind"
                    android:textColor="@color/textColorPrimary"
                    android:id="@+id/survey3b2b" />
            </RadioGroup>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Preferred leasing time"
                android:textColor="@color/textColorPrimary"
                android:id="@+id/leasetime" />

            <LinearLayout
                android:id="@+id/start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start date:"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/surveyLsStartTime"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="#ededed"
                    android:padding="8dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End date:"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/surveyLsEndTime"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="#ededed"
                    android:padding="8dp"
                    android:layout_marginLeft="18.5dp"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/surveynext"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_botton_next"
        android:text="Next ->"
        android:textColor="@color/textColor"
        android:textSize="24dp"/>

</RelativeLayout>