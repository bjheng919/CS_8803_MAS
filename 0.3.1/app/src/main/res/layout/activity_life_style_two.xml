    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center"
        android:text="Match Your Roommates"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/textColorPrimary"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/surveydescription" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130dp">

        <Button
            android:id="@+id/tabone"
            android:layout_width="105dip"
            android:layout_height="200dip"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:background="@drawable/rounded_botton_one"
            android:text="01\nBasic Info"
            android:textColor="@color/textColor" />

        <Button
            android:id="@+id/tabtwo"
            android:layout_width="105dip"
            android:layout_height="200dip"
            android:layout_marginTop="-20dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:background="@drawable/rounded_botton_two"
            android:text="02\nRoom Choices"
            android:textColor="@color/textColor" />

        <Button
            android:id="@+id/tabthree"
            android:layout_width="105dip"
            android:layout_height="180dip"
            android:layout_marginTop="-20dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:background="@drawable/rounded_botton_three"
            android:text="03\nLifestyle"
            android:textColor="@color/textColor" />

    </RadioGroup>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        android:orientation="vertical"
        android:paddingLeft="130dp"
        android:paddingRight="20dp"
        android:paddingTop="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="How would you use your room?"
                android:id="@+id/useroom" />

            <RadioGroup
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="18dp"
                android:orientation="vertical"
                android:id="@+id/surveyuseroom"
                >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Social"
                    android:checked="true"
                    android:textSize="18dp"
                    android:id="@+id/Forsocial" />

                <RadioButton
                    android:id="@+id/neutral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"
                    android:text="Neutrally" />


                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="15dp"
                    android:text="Not for social"
                    android:id="@+id/nosocial" />
            </RadioGroup>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="How oftern do you cook?"
                android:textColor="@color/textColorPrimary"
                android:id="@+id/cook" />

            <RadioGroup
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="vertical"
                android:id="@+id/surveycook"
                >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Never"
                    android:textColor="@color/textColorPrimary"
                    android:checked="true"
                    android:id="@+id/cooknever" />

                <RadioButton
                    android:id="@+id/cookoncesemester"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="10dp"
                    android:text="Once a semester"
                    android:textSize="18dp"
                    android:textColor="@color/textColorPrimary" />

                <RadioButton
                    android:id="@+id/cookoncemonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="15dp"
                    android:text="Once a month"
                    android:textSize="18dp"
                    android:textColor="@color/textColorPrimary" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="20dp"
                    android:text="Once a week"
                    android:textSize="18dp"
                    android:textColor="@color/textColorPrimary"
                    android:id="@+id/cookonceweek" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="25dp"
                    android:text="Daily"
                    android:textSize="18dp"
                    android:textColor="@color/textColorPrimary"
                    android:id="@+id/cookdaily" />
            </RadioGroup>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Do you mind if your roommates cook?"
                android:textColor="@color/textColorPrimary"
                android:id="@+id/otherpet" />

            <RadioGroup
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="vertical"
                android:id="@+id/othercook"
                >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textSize="18dp"
                    android:textColor="@color/textColorPrimary"
                    android:checked="true"
                    android:id="@+id/othercookyes" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="-32dp"
                    android:text="No"
                    android:textSize="18dp"
                    android:textColor="@color/textColorPrimary"
                    android:id="@+id/othercookno" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/surveynext"
        android:layout_width="match_parent"
        android:layout_height="90dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_botton_next"
        android:text="Next ->"
        android:textColor="@color/textColor"
        android:textSize="24dp"/>

</RelativeLayout>
