<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mit.placeholder">

    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">

        <activity android:name="com.example.mit.placeholder.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.mit.placeholder.CreateProfile" />
        <activity android:name="com.example.mit.placeholder.FillSurvey" />
        <activity android:name="com.example.mit.placeholder.LoginActivity" />
        <activity android:name="com.example.mit.placeholder.Messages" />
        <activity android:name="com.example.mit.placeholder.newMessages"
            android:windowSoftInputMode="adjustNothing">
        </activity>
        <activity android:name="com.example.mit.placeholder.EditProfile" />
        <activity android:name="com.example.mit.placeholder.ProfileDetails" />
        <activity android:name="com.example.mit.placeholder.GroupSetting" />

        <activity android:name="com.example.mit.placeholder.MyChat" />
        <activity android:name="com.example.mit.placeholder.GroupChat" />
        <activity android:name="com.example.mit.placeholder.SignUpActivity"></activity>

    </application>

</manifest>